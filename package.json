{
	"name": "husen",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply --local DB",
		"db:migrate-production": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio --config drizzle.config.local.ts",
		"db:studio-production": "drizzle-kit studio",
		"deploy": "pnpm run build && pnpm run db:migrate-production && wrangler deploy",
		"dev": "react-router dev",
		"dk": "drizzle-kit",
		"format": "biome check --write",
		"preview": "pnpm run build && wrangler dev",
		"start": "wrangler dev --port 3000 --ip '0.0.0.0'",
		"test": "vitest",
		"typecheck": "react-router typegen && tsc",
		"typegen": "react-router typegen"
	},
	"dependencies": {
		"@auth/core": "^0.38.0",
		"@conform-to/react": "^1.3.0",
		"@hono/auth-js": "^1.0.15",
		"@mantine/core": "^7.17.3",
		"@mantine/hooks": "^7.17.3",
		"@react-router/cloudflare": "^7.5.0",
		"@react-router/fs-routes": "^7.5.0",
		"@tabler/icons-react": "^3.31.0",
		"conform-to-valibot": "^1.14.3",
		"drizzle-orm": "^0.41.0",
		"hono": "^4.6.9",
		"hono-react-router-adapter": "^0.6.5",
		"isbot": "^5.1.25",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router": "^7.5.0",
		"remove": "^0.1.5",
		"valibot": "^1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@cloudflare/workers-types": "^4.20250407.0",
		"@hono/vite-dev-server": "^0.19.0",
		"@libsql/client": "^0.15.2",
		"@react-router/dev": "^7.5.0",
		"@types/node": "^22.14.0",
		"@types/react": "^19.1.0",
		"@types/react-dom": "^19.1.1",
		"dotenv": "^16.4.7",
		"dotenv-cli": "^8.0.0",
		"drizzle-kit": "^0.30.6",
		"postcss": "^8.5.3",
		"postcss-preset-mantine": "^1.17.0",
		"postcss-simple-vars": "^7.0.1",
		"typescript": "^5.8.3",
		"vite": "^6.2.1",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.1",
		"wrangler": "^4.8.0"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
